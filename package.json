{
  "name": "nodejs-gmp-practical",
  "version": "0.1.0",
  "bin": {
    "nodejs-gmp-practical": "bin/MentorBookingStack.js"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "test": "jest",
    "cdk": "cdk",
    "cdk:deploy:mentor-booking-storage": "cdk deploy MentorBookingStorage",
    "cdk:deploy:mentor-booking-api": "cdk deploy MentorBookingAPI",
    "cdk:deploy:mentor-booking-notification": "cdk deploy MentorBookingNotification",
    "cdk:deploy:all": "cdk deploy --all",
    "build:lambda:booking-handler": "cd ./assets/lambda/BookingHandler && npm run build",
    "build:lambda:booking-seeder": "cd ./assets/lambda/BookingSeeder && npm run build",
    "build:lambda:notifications-handler": "cd ./assets/lambda/NotificationsHandler && npm run build",
    "build:assets:all": "concurrently 'npm run build:lambda:booking-handler' 'npm run build:lambda:booking-seeder' 'npm run build:lambda:notifications-handler'",
    "format": "prettier --check ./{bin,lib,assets,utils}/**/*.ts",
    "format:fix": "prettier --write ./{bin,lib,assets,utils}/**/*.ts",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@eslint/js": "^9.34.0",
    "@types/jest": "^29.5.14",
    "@types/node": "22.7.9",
    "aws-cdk": "2.1020.2",
    "concurrently": "^9.2.1",
    "dotenv": "^17.2.2",
    "eslint": "^9.34.0",
    "eslint-cdk-plugin": "^3.3.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^16.1.5",
    "prettier": "^3.6.2",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "~5.6.3",
    "typescript-eslint": "^8.41.0"
  },
  "dependencies": {
    "aws-cdk-lib": "2.202.0",
    "constructs": "^10.0.0"
  },
  "lint-staged": {
    "*.{ts}": [
      "eslint --cache --cache-location node_modules/.cache --fix",
      "prettier --write"
    ]
  }
}
